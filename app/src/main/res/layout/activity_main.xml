<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.ndhzs.timeplan.weight.timeselectview.TimeSelectView
        android:id="@+id/time_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        app:amount="2"
        app:cardCornerRadius="8dp"
        app:centerTime="-1"
        app:intervalHeight="110dp"
        app:isShowDiffTime="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:timeRangeArray="0-18,6-0"
        app:timelineWidth="160dp" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFDCCC48"
        android:text="清除按钮"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_view" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/button_clear"
        app:layout_constraintEnd_toStartOf="@+id/button_5"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/button_clear"
        app:layout_constraintTop_toTopOf="@+id/button_clear" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/button_1"
        app:layout_constraintEnd_toStartOf="@+id/button_10"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintTop_toTopOf="@+id/button_1" />

    <Button
        android:id="@+id/button_10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@+id/button_5"
        app:layout_constraintEnd_toStartOf="@+id/button_15"
        app:layout_constraintStart_toEndOf="@+id/button_5"
        app:layout_constraintTop_toTopOf="@+id/button_5" />

    <Button
        android:id="@+id/button_15"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="15"
        app:layout_constraintBottom_toBottomOf="@+id/button_10"
        app:layout_constraintEnd_toStartOf="@+id/button_20"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/button_10"
        app:layout_constraintTop_toTopOf="@+id/button_10" />

    <Button
        android:id="@+id/button_20"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="20"
        app:layout_constraintBottom_toBottomOf="@+id/button_15"
        app:layout_constraintStart_toEndOf="@+id/button_15"
        app:layout_constraintTop_toTopOf="@+id/button_15" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置时间间隔数"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/button_10"
        app:layout_constraintEnd_toEndOf="@+id/button_20"
        app:layout_constraintStart_toStartOf="@+id/button_1" />


</androidx.constraintlayout.widget.ConstraintLayout>